<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddAddressActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_margin="30dp">



            <Button
                style="@style/btnDefaultAr"
                android:id="@+id/btnHomeVisit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/book_a_home_visit_ar"
                android:layout_marginTop="15dp"
                android:visibility="gone"/>


            <Button
                style="@style/btnDefaultAr"
                android:id="@+id/btnOrderTracking"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/track_your_dishdasha_ar"
                android:layout_marginTop="50dp"
                android:visibility="gone"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="يرجى العلم بأن الخدمة غير متوفرة حاليا"
                android:textStyle="bold"
                android:fontFamily="@font/ge_dinar_one_medium"
                android:textSize="16sp"
                android:textColor="#222222"
                android:textAllCaps="false"
                android:gravity="center"
                android:layout_marginTop="5dp"/>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>